<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">


    <servlet>
        <servlet-name>AddBankServlet</servlet-name>
        <servlet-class>com.home.bankApplication.servlets.AddBankServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBankServlet</servlet-name>
        <url-pattern>/addBankServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllBanksBeforeRemoveServlet</servlet-name>
        <servlet-class>com.home.bankApplication.servlets.AllBanksBeforeRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllBanksBeforeRemoveServlet</servlet-name>
        <url-pattern>/allBanksBeforeRemoveServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveBankServlet</servlet-name>
        <servlet-class>com.home.bankApplication.servlets.RemoveBankServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveBankServlet</servlet-name>
        <url-pattern>/removeBankServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllBanksBeforeRemovingAllBanksServlet</servlet-name>
        <servlet-class>com.home.bankApplication.servlets.AllBanksBeforeRemovingAllBanksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllBanksBeforeRemovingAllBanksServlet</servlet-name>
        <url-pattern>/allBanksBeforeRemovingAllBanksServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BeforeFindClientsOfBankServlet</servlet-name>
        <servlet-class>com.home.bankApplication.servlets.BeforeFindClientsOfBankServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BeforeFindClientsOfBankServlet</servlet-name>
        <url-pattern>/beforeFindClientsOfBankServlet</url-pattern>
    </servlet-mapping>





</web-app>


